<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.Views.ProfilePage"
             Title="Профиль"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout 
        BackgroundColor="#a08be8">
        <Label 
            Text="Вы не зарегестрировались!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="profile.svg" />

        <HorizontalStackLayout Spacing="15">
            <Entry TextColor="Black" BackgroundColor="White" x:Name="TitleEntry" Placeholder="Что-то нужно сделать..." />
            <Button Clicked="OnBtnClciked" Text="Ввести" />
        </HorizontalStackLayout>
        
        <Button Clicked="OnGoToReg" Text="Зарегестрироваться" />
        
        <CollectionView ItemsSource="{Binding TodoItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Title}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        
    </VerticalStackLayout>
</ContentPage>