<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.Views.EditProfilePage"
             Title="Edit Profile">

    <StackLayout Padding="20">
        <ImageButton Source="backspace.png" HeightRequest="40" WidthRequest="40" Margin="0" Padding="0" HorizontalOptions="Start"
                    Clicked="OnGoBack"/>

        <Label Text="Изменить профиль" FontSize="24" HorizontalOptions="Center" Margin="0, 30, 0, 10" />

        <Entry x:Name="nameEntry" Placeholder="Отображаемое имя" />
        <Entry x:Name="passEntry" Placeholder="Новый пароль" IsPassword="True" />
        <Entry x:Name="rPassEntry" Placeholder="Повторите новый пароль" IsPassword="True" />
        <Button Clicked="UploadAvatar" Text="Загрузить аватарку" />

        <Button Text="Сохранить" Clicked="SaveButton_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0, 30, 0, 0" />

    </StackLayout>
</ContentPage>